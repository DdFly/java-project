<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">
    <ImageView android:id="@+id/item_movie_img"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:focusable="false"
        android:clickable="true"
        android:src="@drawable/baomihua"/>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="80dp"  
        android:layout_toRightOf="@id/item_movie_img"     
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:gravity="left"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/item_movie_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="非凡任务"
            android:textSize="20sp"/>
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评分"
                android:textSize="10sp"
                android:textColor="#8000"/>
            <TextView android:id="@+id/item_movie_grade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="8.2"
                android:textSize="15sp"
                android:textColor="#cc0"/>
        </LinearLayout>
        <TextView android:id="@+id/item_movie_text"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:text="案件佛共埃里克激发破而弄埃及人 价而欧赔和股份可能"
            android:textSize="12sp"
            android:textColor="#a000"/>
    </LinearLayout>
	<Button 
	    android:id="@+id/movie_item_del"
	    android:layout_width="40dp"
	    android:layout_height="20dp"
	    android:layout_marginRight="30dp"
	    android:layout_centerVertical="true"
	    android:layout_alignParentRight="true"
        android:focusable="false"
        android:clickable="true"
	    android:background="#5f00"
	    android:text="删除"/>    

</RelativeLayout>
