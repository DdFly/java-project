<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrount_login"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText 
	            android:id="@+id/movie_edit_name"
	            android:layout_width="180dp"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="20dp"
	            android:layout_marginLeft="20dp"
	            android:textSize="30sp"
	            android:text="非凡任务"
	            android:singleLine="true"/>
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="时长"/>
                <EditText android:id="@+id/movie_edit_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:textSize="20sp"
                    android:text="150"/>
            </LinearLayout>
        </LinearLayout>
        
        <ImageView 
            android:id="@+id/movie_edit_img"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/p"/>
    </LinearLayout>
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2000"
        android:text="影片类型"/>
    <TableLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TableRow >

            <CheckBox android:text="惊悚" />
            <CheckBox android:text="喜剧"/>
            <CheckBox android:text="犯罪"/>
            <CheckBox android:text="爱情" />

        </TableRow>
        <TableRow >
            <CheckBox android:text="科幻" />
            <CheckBox android:text="动作"/>
            <CheckBox android:text="悬疑"/>            
            <CheckBox android:text="冒险" />
        </TableRow>
        <TableRow >
            <CheckBox android:text="战争" />
            <CheckBox android:text="武侠"/>
            <CheckBox android:text="纪录"/>
        </TableRow>
        
    </TableLayout>
    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2000"
        android:text="影片介绍"/>
    <EditText android:id="@+id/movie_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:lines="5"
        android:text="林凯（黄轩 饰）是李建国（祖峰 饰）安插在贩毒集团的卧底，
        		他逐步渗透到“双鹰”贩毒集团后，发现幕后头目“老鹰”（段奕宏 饰）与八年前李建
        		国作为卧底调查的贩毒集团有关，还囚禁了当时李建国的上级，最终林凯与李建国巧妙配合捣毁了整个贩毒集团。"/>
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2000"
        android:text="主要演员"/>
    

</LinearLayout>
